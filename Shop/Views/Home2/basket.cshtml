@model List<Shop.Models.BasketModel>
<h1 class="text-center bb-db1">Your Basccket</h1>
<ul>

    @foreach (var item in Model)
    {
        string path = "~/Images/" + item.Image + ".png";
        <li>
            <img src="@path" asp-append-version = "true" width="150" >
            @item.Brend 
            @item.Name
            @if (item.Type == "Vobler")
            {
                @item.Size 
                <label>mm</label>
                @item.Colour
            }
            @if (item.Type == "Rod")
            {
                @item.Property
            }
            @if (item.Type == "Wheel")
            {
                @item.Size
            }
            @item.Price $
        </li>
        <br />
    }
</ul>
@{
    ViewData["Tittle"] = "Total price is";
}
<h1>@ViewData["Tittle"] @ViewData["Message"]</h1>
<h2></h2>
<form asp-controller="Home2" asp-action="SubmitPerchase" >
    <div class="bb-db1" ></div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>

