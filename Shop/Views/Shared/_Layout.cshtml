<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid bg-info bg-gradient">
                <a class="navbar-brand" asp-area="" asp-controller="Home2" asp-action="Index">
                    <img src="~/Images/Icons/icons8-fish-64.png" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="try">
                            <a class="nav-link text-dark align-content-lg-end" asp-area="" asp-controller="Home2" asp-action="Search">
                                <img src="~/Images/search.png" width="20" />
                            </a>
                        </li>
                        <br />

                        <li class="try">
                            <a class="nav-link text-dark align-content-lg-end" asp-area="" asp-controller="Home2" asp-action="AllItems">All Items</a>

                        </li>

                    </ul>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-dark align-content-lg-end try" asp-area="" asp-controller="Extra" asp-action="ChoooseTypeOfAccount">
                            <img src="~/Images/Icons/icons8-male-user-64.png" width="45" />
                        </a>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div>
                            <div>
                                <a class="nav-link text-dark">HELLO @User.Identity.Name</a>
                            </div>
                            <div>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Identiy" asp-action="Logout">Logout</a>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="bg-info bg-gradient">

            <a asp-area="" asp-controller="Home2" asp-action="basket">
                <img width="30" src="~/Images/Icons/basket2-fill.svg" />
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
